{
  "name": "limited-cache",
  "version": "0.0.3",
  "private": true,
  "description": "A minimal JS cache: like using an object, except it won't grow forever",
  "keywords": [
    "cache",
    "limited cache",
    "circular buffer",
    "rotating cache",
    "max size",
    "autoexpire"
  ],
  "license": "MIT",
  "homepage": "https://github.com/spautz/limited-cache",
  "repository": "github:spautz/limited-cache",
  "author": "Steven Pautz <spautz@gmail.com>",
  "main": "main.js",
  "module": "main.esm.js",
  "types": "hooks.d.ts",
  "scripts": {
    "____ BASE COMMANDS _________________________________________________": "",
    "clean": "rimraf dist/",
    "build": "rollup -c",
    "build:check": "node ./scripts/check-build.js",
    "format": "prettier --write \"**/*.{css,html,js,json,less,md,scss,ts}\"",
    "format:check": "prettier --list-different \"**/*.{css,html,js,json,less,md,scss,ts}\"",
    "lint": "eslint \"**/*.{js,json,ts}\"",
    "test": "jest",
    "test:clean": "rimraf coverage/",
    "test:coverage": "jest --coverage",
    "test:report": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:watch": "jest --watch",
    "types": "tsc --noEmit src/main.ts src/hooks.ts",
    "____ HOOKS _________________________________________________________": "",
    "prebuild": "yon clean",
    "postbuild": "node ./scripts/copy-files.js && yon build:check",
    "prepublishOnly": "yon check && yon build",
    "pretest": "yon test:clean",
    "____ INTEGRATION ___________________________________________________": "",
    "dev": "yon run format && yon run types && yon run lint",
    "check": "yon format:check && yon run types && yon run lint",
    "ci": "yon run check && yon run test:report && yon run build",
    "all": "yon run dev && yon run test:coverage && yon run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-replace": "^2.3.0",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.6",
    "@types/react": "^16.9.17",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-hooks-testing-library": "^0.6.0",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.29.0",
    "rollup-plugin-terser": "^5.1.3",
    "rollup-plugin-typescript2": "^0.25.3",
    "ts-jest": "^24.3.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.4",
    "yarn-or-npm": "^3.0.1"
  },
  "optionalDependencies": {},
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|/tests/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ]
  },
  "lint-staged": {
    "**/*.{css,html,js,json,less,md,scss,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
